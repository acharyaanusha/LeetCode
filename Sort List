# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def sortList(self, head: ListNode) -> ListNode:
        arr = []
        dummy = head
        while head:
            arr.append(head.val)
            head = head.next
        arr.sort()
        
        dummy = new = ListNode(None)
        for i in arr:
            new.next = ListNode(i)
            new = new.next
        return dummy.next
