class Solution:
    def balancedStringSplit(self, s: str) -> int:
        balance =0
        pair =0
        l="L"
        r="R"
        for char in s:
            if char == l:
                balance+=1
                if balance==0:
                    pair+=1
            if char == r:
                balance-=1
                if balance==0:
                    pair+=1
        return pair
